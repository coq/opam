  "coq" {(>= "8.7" & < "8.11~") | (= "dev")}
  "coq-mathcomp-ssreflect" {(>= "1.6.2" & < "1.9~") | (= "dev")}
  "coq-fcsl-pcm"
  "coq-disel" {= version}
]

