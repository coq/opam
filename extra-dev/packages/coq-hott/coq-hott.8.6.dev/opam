  ["./autogen.sh"]
  ["./configure" "COQBIN=%{bin}%" "COQTOP=%{bin}%/coqtop" "COQC=%{bin}%/coqc" "COQDEP=%{bin}%/coqdep" "COQIDE=%{bin}%/coqide" "--prefix=%{prefix}%"]
  ["%{make}%" "-j%{jobs}%"]
]
install: ["%{make}%" "install"]
remove: ["rm" "-Rf" "%{share}%/hott"]
