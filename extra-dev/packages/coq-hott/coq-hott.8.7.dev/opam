build: [
  ["rm" ".gitmodules"]
  ["bash" "-c" "./autogen.sh || :"]
  ["./configure" "COQBIN=%{bin}%" "--prefix=%{prefix}%"]
  ["%{make}%" "-j%{jobs}%"]
]
install: ["%{make}%" "install"]
remove: ["rm" "-r" "-f" "%{share}%/hott"]
