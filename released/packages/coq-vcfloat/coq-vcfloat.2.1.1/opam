  src: "https://github.com/VeriNum/vcfloat/archive/refs/tags/v2.1.1.tar.gz"
  checksum: "sha256=cd0098a7448e13116f4bb1faa3d93c6f1a8b5a6fa83be979875b432aeb9eb27e"
}
