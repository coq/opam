license: "LGPL-3.0-or-later"

build: [
  [ make "-C" "vcfloat" "-j%{jobs}%" "vcfloat2"]
]
install: [
  [make "-C" "vcfloat" "-j%{jobs}%" "install" "INSTALLDIR=%{lib}%/coq/user-contrib/vcfloat"]
]
run-test: [
  [make "-C" "vcfloat" "-j%{jobs}%" "tests"]
]
depends: [
  "coq" {>= "8.16" & < "8.18~"}
  "coq-flocq" {>= "4.1.0" & < "5.0"}
  "coq-interval" {>= "4.5.2"}
  "coq-compcert" {>= "3.11"}
  "coq-bignums"
]
