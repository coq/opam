build: [
  ["./configure"]
  [make "-j%{jobs}%"]
  [make "install" "BINDIR=%{bin}%"]
 ]
remove: [
  ["rm" "%{bin}%/dpd2dot"]
  ["rm" "-R" "%{lib}%/coq/user-contrib/dpdgraph"]
]

depends: [
   "coq" {>= "8.5"}
   "ocamlgraph"
]

